<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Wave Options" >
        <CheckBoxPreference
            android:enabled="true"
            android:key="ShowByDefault"
            android:summary="Show Layer By Default"
            android:title="Show By Default" >
        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Layer Style Options" >
        <ListPreference
            android:enabled="true"
            android:entries="@array/BillboardScaleing"
            android:entryValues="@array/BillboardScaleingKeys"
            android:key="BillBoard_Scaleing"
            android:summary="Options for how billboards scale with distance."
            android:title="BillBoard Scaleing" >
        </ListPreference>
    </PreferenceCategory>

</PreferenceScreen>