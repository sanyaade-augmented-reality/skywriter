<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/add_arblip_layout">

    <TextView
        android:text="@string/latitudeText"
        android:textSize="8pt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/latitude"
        android:text="@string/latitudeValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"/>
    
    <TextView
        android:text="@string/longitudeText"
        android:textSize="8pt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/longitude"
        android:text="@string/longitudeValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"/>
        
    <TextView
        android:text="@string/altitudeText"
        android:textSize="8pt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/altitude"
        android:text="@string/altitudeValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"/>
      
    <TextView
        android:text="@string/arblipContentText"
        android:textSize="8pt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/arblipContent"
        android:text="@string/arblipContentValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"/>  
       
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/add_arblip_buttons_layout"> 
    
	    <Button android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_gravity="right" 
		android:id="@+id/cancelButton" 
		android:text="@string/cancelButton" />
		
		<Button android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_gravity="right" 
		android:id="@+id/addButton" 
		android:text="@string/addButton" />
	</LinearLayout>
        
 <CheckBox android:text="@+id/AutoSetLocationLab" android:id="@+id/AutoSetLocation" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
</LinearLayout>